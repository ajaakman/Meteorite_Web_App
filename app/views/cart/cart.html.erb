<h1>Your Orders</h1>
<br>

<table class="my_tables display responsive no-wrap">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Added to Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @new_orders.each do |order| %>
      <tr>
        <td><%= order.user.email %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<button type="button" class="order_button">Place Order</button>
<br>

<h1>Previous Orders</h1>
<br>

<table class="my_tables display responsive no-wrap">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Order Placed On</th>
    </tr>
  </thead>

  <tbody>
    <% @old_orders.each do |order| %>
      <tr>
        <td><%= order.user.email %></td>
        <td><%= order.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
