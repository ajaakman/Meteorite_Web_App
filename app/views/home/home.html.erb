<h1>Locations of recorded meteorite landings.</h1>

Search meteorite by name: <input type="text" id="meteorite">
Year: <%= select_tag(:year, options_for_select(['All','2012','2013'])) %>

<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC9y8Rb43wZSt9LamheyaCQxVGY5AicH6o&callback=initMap&libraries=visualization">
</script>

<div class="row">
   <div class="col-xs-12">
     <div id="map-canvas"> </div>
   </div>
</div>

<div id="floating-panel">
      <button id = "toggleMarker" class = "btn btn-default">Toggle Markers</button>
      <button id = "toggleHeatmap" class = "btn btn-info">Toggle Heatmap</button>
      <button id = "changeOpacity" class = "btn btn-warning">Change Opacity</button>
</div>

<div class="row">
   <div class="col-xs-12">
  <div id="barChartContainer" style="width:100%; height: 700px; margin: 0 auto"></div>
  </div>
</div>

</div>

<script type="text/javascript">
  initBarChart(<%=raw @meteoritesData %>)
</script>
