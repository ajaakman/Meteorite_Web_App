<p id="notice"><%= notice %></p>

<h1>Meteorites</h1>

<%= link_to 'New Meteorite', new_meteorite_path %>
<br>
<br>

<table class="my_tables display responsive no-wrap">
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Mass</th>
      <th>Year</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @meteorites.each do |meteorite| %>
      <tr>
        <td><%= meteorite.name %></td>
        <td><%= meteorite.meteorite_class %></td>
        <td><%= meteorite.mass %></td>
        <td><%= meteorite.year %></td>
        <td><%= meteorite.latitude %></td>
        <td><%= meteorite.longitude %></td>
        <td><%= link_to 'Show', meteorite %></td>
        <td><%= link_to 'Edit', edit_meteorite_path(meteorite) %></td>
        <td><%= link_to 'Destroy', meteorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
