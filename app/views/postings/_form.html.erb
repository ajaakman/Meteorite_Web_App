<%= form_with(model: posting, local: true) do |form| %>
  <% if posting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(posting.errors.count, "error") %> prohibited this posting from being saved:</h2>

      <ul>
      <% posting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %> <br>
    <%= form.collection_select :user_id, @users, :id, :email, {:selected => current_user.id} %>
  </div>

  <div class="field">
    <%= form.label :meteorite_id %> <br>
    <%= form.collection_select :meteorite_id, @meteorites, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight, id: :posting_weight %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost, id: :posting_cost %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
